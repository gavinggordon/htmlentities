{
  "name": "gavinggordon/htmlentities",
  "type": "library",
  "description": "A PHP class which allows the decoding and encoding of a wider variety of characters compared to the standard htmlentities and html_entity_decode functions.",
  "keywords": [
    "php",
	"html",
    "htmlentities",
    "entities",
	"encode",
	"decode",
	"format"
  ],
  "homepage": "http://htmlentities.gavingordon.com",
  "support": {
    "issues": "https://github.com/gavinggordon/htmlentities/issues",
    "source": "https://github.com/gavinggordon/htmlentities"
  },
  "minimum-stability": "stable",
  "license": "MIT",
  "authors": [
    {
      "name": "Gavin G Gordon",
      "email": "support@gavingordon.com",
      "homepage": "https://gavingordon.com",
	  "role": "Developer"
    }
  ],
  "repositories": [
    {
	  "type": "git",
	  "url": "https://github.com/gavinggordon/htmlentities.git"
	}
  ],
  "require": {
    "php": ">=5.4.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.8"
  },
  "autoload": {
    "psr-4": {
      "GGG\\Html\\": "src/Html/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "GGGTests\\": "tests/Html/"
    }
  }
}